<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence           http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
  <persistence-unit name="CadastroServerPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>model.PessoaJuridica</class>
    <class>model.SequenciaPessoa</class>
    <class>model.Produto</class>
    <class>model.Usuario</class>
    <class>model.Pessoa</class>
    <class>model.Movimento</class>
    <class>controller.PessoaJuridica</class>
    <class>controller.Produto</class>
    <class>controller.Usuario</class>
    <class>controller.Pessoa</class>
    <class>controller.Pessoafisica</class>
    <class>controller.SequenciaPessoa</class>
    <class>controller.Movimento</class>
    <class>model.PessoaFisica</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/loja"/>
      <property name="javax.persistence.jdbc.user" value="loja"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="loja"/>
      <property name="eclipselink.logging.level" value="FINE"/>
      <property name="eclipselink.ddl-generation" value="create-tables"/>
    </properties>
  </persistence-unit>
</persistence>
